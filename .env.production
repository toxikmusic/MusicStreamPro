NODE_ENV=production
SESSION_SECRET=change_this_to_a_secure_random_string_in_deployment
# Set to true in production to force secure cookies
SESSION_COOKIE_SECURE=true
# Set to 30 days in production (in milliseconds)
SESSION_COOKIE_MAXAGE=2592000000
# Enable Cloudflare streaming in production
ENABLE_CLOUDFLARE_STREAMING=true
# Cloudflare API key is stored as a secret
# CLOUDFLARE_API_KEY=your_api_key